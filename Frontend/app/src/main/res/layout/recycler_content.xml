<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_content_height">

    <ImageView
        android:id="@+id/recycler_image"
        android:layout_width="@dimen/recycler_content_image_size"
        android:layout_height="@dimen/recycler_content_image_size"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="@dimen/recylcer_content_image_margin"
        android:background="#FF0000"
        android:cropToPadding="true"
        android:foreground="@android:drawable/ic_menu_call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/recycler_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="@dimen/recylcer_content_image_margin"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recycler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="홍길동"
            android:textSize="@dimen/recycler_font_size" />

        <TextView
            android:id="@+id/recycler_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="3:00PM(월)"
            android:textSize="@dimen/recycler_font_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recycler_button_layout"
        android:layout_width="108dp"
        android:layout_height="98dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="@dimen/recylcer_content_image_margin"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/recycler_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약속 만들기" />

        <Button
            android:id="@+id/recycler_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천 삭제" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>